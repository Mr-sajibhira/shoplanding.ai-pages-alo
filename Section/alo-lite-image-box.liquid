<style>
 .id_{{ section.id }}{
   padding:80px 0px;
   background-color:#ffffff;
 }
.id_{{ section.id }} .container{
    max-width:1200px;
    width:100%;
    margin:0px auto;
}
.id_{{ section.id }} .container .row{
  display:flex;
  flex-wrap:wrap;
  margin:-20px;
}
.id_{{ section.id }} .container .row .col{
  max-width:33.33%;
  width:100%;
  box-sizing: border-box;
  padding:20px;
}

.id_{{ section.id }} .container .content{
  max-width:700px;
  width:100%;
  margin:0px auto 50px;
}
.id_{{ section.id }} .content img{
  max-width:200px;
  display:block;
  margin:0px auto 20px auto;
}
  
.id_{{ section.id }} .content .title{
    font-size: 50px;
    font-weight: 600;
    line-height: 110%;
    color: #242424;
    text-align: center;
    width: 100%;
    margin: 0px 0px 16px 0px;
}

.id_{{ section.id }} .content .des{
    font-size: 22px;
    font-weight: 500;
    line-height: 140%;
    color: #575757;
    text-align: center;
    width: 100%;
    margin: 0px 0 0px 0px;
}
  
.id_{{ section.id }} .image_box img{
  max-width:100%;
  display:block;
  aspect-ratio: 3/4;
  object-fit: cover;
   border-radius:6px;
  margin:0px 0px 20px 0px;
}
  
.id_{{ section.id }} .image_box .title{
    font-size: 24px;
    line-height: 130%;
    font-weight: 600;
    color: #242424;
    margin: 0px 0px 10px 0px;
   text-align: center;
}
  


.id_{{ section.id }} .image_box .des{
    font-size: 16px;
    line-height: 150%;
    font-weight: 400;
    color: #575757;
    margin:0px 0px 0px 0px;
   text-align: center;
}

  
.id_{{ section.id }} .image_box .des p, .id_{{ section.id }} .image_box .des ul{
  margin:0px;
}

@media(max-width:768px){
  
 .id_{{ section.id }}{
   padding:50px 20px;
 }
  
.id_{{ section.id }} .container .row{
    margin:0px;
    gap:50px;
  }
  
.id_{{ section.id }} .container .row .col{
  max-width:100%;
  padding:0px;
}

.id_{{ section.id }} .container .content{
  max-width:100%;
  width:100%;
  margin:0px auto 30px;
}
.id_{{ section.id }} .content img{
  max-width:150px;
  margin:0px auto 20px auto;
}
  
.id_{{ section.id }} .content .title{
    font-size: 40px;
}

.id_{{ section.id }} .content .des{
    font-size: 18px;
}
  
}
  
</style>

<section class="id_{{ section.id }}">
  <div class="container">

    <div class="content">  
          {% if section.settings.img != blank %}
             <img src="{{ section.settings.img | image_url }}" alt="{{ section.settings.img.alt }}" width="100%" height="100%">
         {% endif %}
         <h3 class="title">{{ section.settings.title }}</h3>
         <div class="des">{{ section.settings.des }}</div>
    </div>


    
    <div class="row">
      {% for block in section.blocks %}
        {%  case block.type%}
          {% when "image_box" %}
           <div class="col">
             <div class="image_box">
               {% if block.settings.img != blank %}
                 <img src="{{ block.settings.img | image_url }}" alt="{{ block.settings.img.alt }}" width="100%" height="100%">
               {% endif %}
               <h3 class="title">{{ block.settings.title }}</h3>
               <div class="des">{{ block.settings.text }}</div>
              
             </div>
            </div>
          {% endcase %}
      {% endfor %}
    </div>
    
    
  </div>
</section>





{% schema %}
  {
    "name": "Alo Lite Image Box",
    "settings": [
      {
        "type": "image_picker",
        "label": "Select Logo",
        "id": "img",
      },
      {
        "type": "text",
        "label": "Title",
        "id": "title",
        "default":"READY WHEN YOU ARE"
      },
      {
        "type": "textarea",
        "label": "Description",
        "id": "des",
        "default":"Kick off 2024 with 30 free days of Alo Moves. Access fitness, mindfulness & self-care classes everywhere you go."
      }
    ],
    "blocks": [
      {
        "type": "image_box",
        "name":"Image box",
        "settings": [
          {
            "type": "image_picker",
            "label": "Select Image",
            "id": "img"
          },
          {
            "type": "text",
            "label": "Title",
            "id": "title",
            "default":"Stay on top of payments."
          },
          {
            "type": "richtext",
            "label": "Description",
            "id": "text",
            "default":"<p>See all your purchases in the app, pay early whenever you like and always get notified of upcoming payments.</p>"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Alo Lite Image Box",
        "blocks": [
          {
            "type": "image_box",
          },
          {
            "type": "image_box",
          },
          {
            "type": "image_box",
          }
        ]
      }
    ]
  }
{% endschema %}