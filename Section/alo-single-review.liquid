<style>
.id_{{ section.id }}{
  padding:150px 0px 100px;
  background-color:#151515;
}
.id_{{ section.id }} .container{
  max-width:500px;
  width:100%;
  margin:0px auto;
}
.id_{{ section.id }} .container .box img{
    aspect-ratio: 500/700;
    object-fit: cover;
    max-width:100%;
   margin: 0px auto 16px auto;
}  

.id_{{ section.id }} .box svg{
    width: 100%;
    height:28px;
    margin: 0px auto 16px auto;
}
  
.id_{{ section.id }} h2{
    font-size: 36px;
    font-weight: 500;
    line-height: 120%;
    color: #ffffff;
    text-align: center;
    width: 100%;
    margin: 0px 0px 16px 0px;
}
.id_{{ section.id }} h3 {
    font-size: 22px;
    font-weight: 500;
    line-height: 120%;
    color: #dcdcdc;
    text-align: right;
    width: 100%;
    margin: 0px 0px 0px 0px;
}
   @media(max-width:767px){

     
.id_{{ section.id }}{
  padding:80px 20px 50px;
}
     
.id_{{ section.id }} h2{
    font-size: 30px;
    margin: 0px 0px 10px 0px;
}
.id_{{ section.id }} h3 {
    font-size: 18px;
}
.id_{{ section.id }} .container .box img{
   margin: 0px auto 10px auto;
}  

.id_{{ section.id }} .box svg{
    height:24px;
    margin: 0px auto 10px auto;
}     
     
   }
